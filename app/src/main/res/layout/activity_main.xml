<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.azadljy.slidingconflicttest.MainActivity">

    <com.example.azadljy.slidingconflicttest.weight.MyTestScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#333333"
                />
            <ImageView
                android:layout_width="match_parent"
                android:background="#378399"
                android:layout_height="100dp" />
            <com.example.azadljy.slidingconflicttest.weight.MyTestListView
                android:id="@+id/test_listview"
                android:layout_width="match_parent"
                android:background="#ee9933"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp" />-->
            <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp" />-->
            <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp" />-->

            <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp" />-->
        </LinearLayout>


    </com.example.azadljy.slidingconflicttest.weight.MyTestScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="go"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
