<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.azadljy.slidingconflicttest.InputTestActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="actionNext"
        android:imeOptions="actionNext"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="actionGo"
        android:imeOptions="actionGo"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="actionNone"
        android:imeOptions="actionNone"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="actionPrevious"
        android:imeOptions="actionPrevious"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="actionSearch"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="actionSend"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="actionUnspecified"
        android:imeOptions="actionUnspecified"
        android:inputType="text"
        android:maxLines="1" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="actionDone"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"/>


</LinearLayout>
